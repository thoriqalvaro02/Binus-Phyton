class student:
    def __init__(self, name, age, grade, school):
        self.name = name
        self.age = age
        self.grade = grade
        self.school = school
        
    def display_biodata(self):
        print("\n=====Student Biodata=====")
        print(f"Name   : {self.name}")
        print(f"Age    : {self.age}")
        print(f"Grade  : {self.grade}")
        print(f"School : {self.school}")
        
        
print("Enter Student Biodata: ")
name = input("Enter name: ")
age = input("Enter age: ")
grade = input("Enter grade: ")
school = input("Enter school: ")

student1 = student(name, age, grade, school)

student1.display_biodata()
